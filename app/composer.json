{
    "name": "styx/p5-blog",
    "description": "Project number 5 for my Application Developer training - PHP/Symfony from Openclassrooms. Creation of a blog in PHP.",
    "license": "MIT Licence",
    "authors": [
        {
            "name": "Mehdi Haddou",
            "email": "mehdi.h.devapp@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "tests": "XDEBUG_MODE=coverage vendor/bin/phpunit -c phpunit.xml",
        "analyse": "vendor/bin/phpstan analyse -l 9 public src tests scripts --xdebug;",
        "make:env": "php scripts/DotEnvScript.php"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10",
        "phpunit/php-code-coverage": "^10.0"
    }
}
