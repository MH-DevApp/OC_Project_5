{
    "name": "styx/p5-blog",
    "description": "Project number 5 for my Application Developer training - PHP/Symfony from Openclassrooms. Creation of a blog in PHP.",
    "license": "MIT",
    "authors": [
        {
            "name": "Mehdi Haddou",
            "email": "mehdih.devapp@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "tests": [
            "TEST_PATH=_test php scripts/DatabaseScript.php",
            "XDEBUG_MODE=coverage vendor/bin/phpunit -c phpunit.xml"
        ],
        "analyse": "vendor/bin/phpstan analyse -l 9 public src tests scripts --xdebug;",
        "make:env:local": "ENV_MODE=local php scripts/DotEnvScript.php",
        "make:env:docker": "ENV_MODE=docker php scripts/DotEnvScript.php",
        "make:database": "php scripts/DatabaseScript.php",
        "make:database:test": "TEST_PATH=_test php scripts/DatabaseScript.php",
        "make:load:fixtures" : [
            "php scripts/fixtures/Fixtures.php"
        ]
    },
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "twig/twig": "^3.5",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^10",
        "phpunit/php-code-coverage": "^10.0"
    }
}
